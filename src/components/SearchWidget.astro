<div id="sidebar-search" class="sidebar-search">
  <div class="search-input-wrapper">
    <svg class="search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="11" cy="11" r="8"></circle>
      <path d="m21 21-4.35-4.35"></path>
    </svg>
    <input 
      type="search" 
      id="sidebar-pagefind-search" 
      class="sidebar-pagefind-search-input"
      placeholder="Search..."
      autocomplete="off"
    />
  </div>
  <div id="sidebar-pagefind-ui" class="sidebar-pagefind-ui"></div>
</div>

<script is:inline>
  (async function() {
    const searchInput = document.getElementById('sidebar-pagefind-search');
    const pagefindUI = document.getElementById('sidebar-pagefind-ui');

    if (!searchInput || !pagefindUI) return;

    let pagefind = null;
    let searchInterface = null;

    // Initialize Pagefind
    async function initPagefind() {
      if (pagefind) return;
      
      try {
        // Load Pagefind dynamically - only available after build
        // Use Function constructor to prevent Vite from analyzing the import
        const loadPagefind = new Function('path', 'return import(path)');
        const pagefindPath = ['/', 'pagefind', '/', 'pagefind', '.', 'js'].join('');
        const pagefindModule = await loadPagefind(pagefindPath).catch((err) => {
          console.warn('Failed to load Pagefind (normal in dev mode):', err);
          return null;
        });
        if (!pagefindModule || typeof pagefindModule.init !== 'function') {
          throw new Error('Pagefind not available');
        }
        pagefind = await pagefindModule.init();
        
        // Create search interface
        if (pagefind && pagefindUI && searchInput) {
          searchInterface = pagefind.newSearch();
          
          // Connect custom input to Pagefind
          let searchTimeout;
          searchInput.addEventListener('input', (e) => {
            const query = e.target.value.trim();
            
            clearTimeout(searchTimeout);
            
            if (!query) {
              pagefindUI.innerHTML = '';
              return;
            }
            
            // Debounce search
            searchTimeout = setTimeout(async () => {
              try {
                const results = await searchInterface.search(query);
                
                if (!pagefindUI) return;
                
                if (!results || results.results.length === 0) {
                  pagefindUI.innerHTML = '<div class="sidebar-search-message">No results found</div>';
                  return;
                }
                
                pagefindUI.innerHTML = results.results.slice(0, 5).map(result => `
                  <div class="sidebar-search-result">
                    <a href="${result.url}" class="sidebar-search-result-link">
                      ${result.meta?.title || result.url}
                    </a>
                    ${result.excerpt ? `<div class="sidebar-search-excerpt">${result.excerpt.substring(0, 100)}...</div>` : ''}
                  </div>
                `).join('');
              } catch (error) {
                console.error('Search error:', error);
                if (pagefindUI) {
                  pagefindUI.innerHTML = '<div class="sidebar-search-message">Error performing search</div>';
                }
              }
            }, 300);
          });
        }
      } catch (error) {
        // Pagefind not available - this is normal in dev mode
        // Don't show error message, just leave it empty
        if (pagefindUI) {
          pagefindUI.innerHTML = '';
        }
      }
    }

    // Initialize when input is focused
    searchInput.addEventListener('focus', () => {
      initPagefind();
    });
  })();
</script>

<style>
  .sidebar-search {
    margin-bottom: var(--spacing-lg);
  }

  .search-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    background: var(--color-bg);
    transition: border-color 0.2s ease;
  }

  .search-input-wrapper:focus-within {
    border-color: var(--color-primary);
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  .search-icon {
    color: var(--color-text-light);
    flex-shrink: 0;
  }

  .sidebar-pagefind-search-input {
    flex: 1;
    border: none;
    background: none;
    color: var(--color-text);
    font-size: 0.875rem;
    padding: 0;
    outline: none;
  }

  .sidebar-pagefind-search-input::placeholder {
    color: var(--color-text-light);
  }

  .sidebar-pagefind-ui {
    margin-top: var(--spacing-sm);
    max-height: 400px;
    overflow-y: auto;
  }

  .sidebar-search-result {
    padding: var(--spacing-sm);
    margin-bottom: var(--spacing-xs);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    background: var(--color-bg);
    transition: all 0.2s ease;
  }

  .sidebar-search-result:hover {
    border-color: var(--color-primary);
    background: var(--color-bg-alt);
  }

  .sidebar-search-result-link {
    color: var(--color-text);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    display: block;
    margin-bottom: var(--spacing-xs);
    line-height: 1.4;
  }

  .sidebar-search-result-link:hover {
    color: var(--color-primary);
  }

  .sidebar-search-excerpt {
    color: var(--color-text-light);
    font-size: 0.75rem;
    line-height: 1.5;
    margin-top: var(--spacing-xs);
  }

  .sidebar-search-message {
    color: var(--color-text-light);
    padding: var(--spacing-sm);
    text-align: center;
    font-size: 0.875rem;
  }
</style>
